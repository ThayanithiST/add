<script type="text/javascript">
  function SelectedField(fieldId, inputId) {
    var field = document.getElementById(fieldId);
    var selectedValue = field.options[field.selectedIndex].value;
    var inputFields = document.getElementById(inputId);

    if (selectedValue === "text" || selectedValue === "number" || selectedValue === "date") {
      inputFields.innerHTML = null;
    } else {
      inputFields.innerHTML = '<div class="input-container"><div style="display:flex;gap: 30px;"><input type="text" name="value" class="form-control" style="width:220px;"><button class="add-button btn btn-success" onclick="EnteredValues(this)">Add</button></div></div>';
    }

  }

  function EnteredValues(button) {
    var inputContainer = button.parentNode;
    var inputFields = inputContainer.parentNode;
    if (inputFields.children.length <= 10) { 
      var txtNewInputBox = document.createElement('div');
      txtNewInputBox.innerHTML = "<div class='input-container'><input type='text' name='value' class='form-control' style='width:220px;'></div>";
      inputFields.appendChild(txtNewInputBox);
    }
  }
</script></form>
